(function(){
  var router = angular.module('subjectRouter', []);
  router.config([
    '$routeProvider',
    function($routeProvider){
      $routeProvider.
      when("/subjects", {
        templateUrl: '<%= asset_path("views/subjects/index.html")%>',
        controller: 'subjectsController',
        controllerAs: 'subjectsCtrl'
      }).
      when("/subjects/new", {
        templateUrl: '<%= asset_path("views/subjects/new.html")%>',
        controller: 'newSubjectsController',
        controllerAs: 'newSubjectsCtrl'
      }).
      when("/subjects/:id", {
        templateUrl: '<%= asset_path("views/subjects/show.html")%>',
        controller: 'showSubjectsController',
        controllerAs: 'showSubjectsCtrl'
      }).
      when("/subjects/:id/edit", {
        templateUrl: '<%= asset_path("views/subjects/edit.html")%>',
        controller: 'editSubjectsController',
        controllerAs: 'editSubjectsCtrl'
      }).
      when("/subjects/:id/add", {
        templateUrl: '<%= asset_path("views/subjects/add.html")%>',
        controller: 'showSubjectsController',
        controllerAs: 'showSubjectsCtrl'
      }).
      otherwise({
        redirectTo: '/subjects'
      })
    }
  ])
})();
